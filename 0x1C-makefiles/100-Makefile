CCWITHFLAGS=gcc -Wall -Werror -Wextra -pedantic
SRC=school.c main.c
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re
all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CCWITHFLAGS) $^ -o $@

main.o: main.c school.h
	$(CC) $(CFLAGS) -c $< -o $@

school.o: school.c school.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) .*~ *~ *.swp $(NAME)

oclean:
	$(RM) $(SRC:.c=.o)

fclean: clean oclean

re: fclean all
