CCWITHFLAGS=gcc -Wall -Werror -Wextra -pedantic
SRC=school.c main.c
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re
all: $(patsubt %.c, %.o $(SRC))
	$(CCWITHFLAGS) $(patsubt %.c, %.o $(SRC)) -o $(NAME)
clean:
	@(RM) .*~ *~ *.swp $(NAME)

oclean:
	rm -f $(SRC:.c=.o)

fclean: clean oclean
	@(RM) $(NAME)

re: fclean all
$(SRC): school.h