CCWITHFLAGS=gcc -Wall -Werror -Wextra -pedantic
SRC=school.c main.c
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CCWITHFLAGS) $^ -o $@


clean:
	rm -f .*~ *~ *.swp $(SRC:.c=.o) $(NAME)

oclean:
	rm -f $(SRC:.c=.o)

fclean: clean oclean
	rm -f $(NAME)

re: fclean all